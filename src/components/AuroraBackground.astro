---
// Shader-driven aurora background (Three.js + GLSL).
import auroraShaderUrl from '../scripts/auroraShader.ts?url';
---

<div class="aurora-wrap" aria-hidden="true">
  <div class="aurora-webgl" id="aurora-webgl"></div>
</div>

<script type="module" src={auroraShaderUrl}></script>

<style>
  .aurora-wrap {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }
  .aurora-webgl {
    position: absolute;
    inset: 0;
  }
  .aurora-webgl canvas {
    width: 100%;
    height: 100%;
    display: block;
  }
</style>
