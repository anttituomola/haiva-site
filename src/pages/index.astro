---
import BaseLayout from '../layouts/BaseLayout.astro';
import AuroraBackground from '../components/AuroraBackground.astro';
---

<BaseLayout title="Häivä" description="Häivä – yhtye. haiva.art">
  <div class="aurora-zone">
    <AuroraBackground />
    <div class="aurora-fade"></div>
    <section class="hero" id="hero">
      <h1 class="hero-title">Häivä</h1>
      <p class="hero-tagline">Kokeellista ääntä ja valoa — haiva.art</p>
    </section>

    <section class="section section-body" id="meista">
      <div class="container">
        <h2 class="section-title">Meistä</h2>
        <div class="prose">
          <p>
            Häivä lipuu yössä, valokaaren humina, sumuinen sävelkudos ja soljuva tarina. Rihma,
            rihma, rihma — kajon varjo, kaari, kaari.
          </p>
          <p>
            Kiviä, kyliä, kumea hiljaisuus, meren hengitys ja hehku. Kaiku kääntyy, kaiku kasvaa,
            kaiku katoaa.
          </p>
        </div>
      </div>
    </section>
  </div>

  <section class="section section-music" id="tapahtumat">
    <div class="container">
      <h2 class="section-title">Tapahtumat</h2>
      <p class="prose">
        Tähän tulee tulevat keikat, tapahtumat ja mahdolliset residenssit.
      </p>
    </div>
  </section>

  <section class="section section-music" id="aanimuotokuva">
    <div class="container">
      <h2 class="section-title">Äänimuotokuva</h2>
      <div class="spotify-embed">
        <p class="placeholder-note">Ääninosto tai upote tähän — korvaa oikealla soittimella.</p>
        <div class="spotify-placeholder">
          <span aria-hidden="true">▶</span> Kuuntele
        </div>
      </div>
    </div>
  </section>

  <section class="section section-images" id="valotyo">
    <div class="container">
      <h2 class="section-title">Valotyö</h2>
      <div class="image-grid">
        <div class="image-placeholder" aria-hidden="true"></div>
        <div class="image-placeholder" aria-hidden="true"></div>
        <div class="image-placeholder" aria-hidden="true"></div>
      </div>
      <p class="placeholder-note">Kuvapaikat — korvaa oikeilla kuvilla ja kuvateksteillä.</p>
    </div>
  </section>

  <section class="section section-contact" id="yhteystiedot">
    <div class="container">
      <h2 class="section-title">Yhteystiedot</h2>
      <div class="contact-block">
        <div class="contact-columns">
          <div>
            <p class="contact-label">Sähköpostit</p>
            <div class="contact-links">
              <a href="mailto:riia.muurimaa@gmail.com">riia.muurimaa@gmail.com</a>
              <a href="mailto:salommatti@gmail.com">salommatti@gmail.com</a>
            </div>
          </div>
          <div>
            <p class="contact-label">Instagram</p>
            <div class="contact-links">
              <a href="https://www.instagram.com/poeseriia/" target="_blank" rel="noreferrer">instagram.com/poeseriia</a>
              <a href="https://www.instagram.com/mattisalo_music/" target="_blank" rel="noreferrer">instagram.com/mattisalo_music</a>
            </div>
          </div>
        </div>
       
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .aurora-zone {
    position: relative;
    overflow: hidden;
    background: radial-gradient(circle at 20% 20%, rgba(10, 12, 25, 0.9), #050508 55%);
  }
  .aurora-zone > section {
    position: relative;
    z-index: 2;
  }
  .aurora-fade {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 120px;
    z-index: 1;
    background: linear-gradient(to bottom, transparent, var(--color-bg));
    pointer-events: none;
  }
  .hero {
    padding: clamp(4rem, 12vw, 8rem) 1.5rem clamp(3rem, 8vw, 5rem);
    text-align: center;
  }
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 300;
    letter-spacing: 0.2em;
    margin: 0 0 0.5rem;
    color: rgba(255, 255, 255, 0.98);
  }
  .hero-tagline {
    font-size: clamp(0.85rem, 2vw, 1rem);
    font-weight: 400;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }
  .section {
    padding: 3rem 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
  }
  .container {
    max-width: 720px;
    margin: 0 auto;
  }
  .section-title {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 1.25rem;
  }
  .prose {
    font-size: 1rem;
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.85);
  }
  .prose p {
    margin: 0 0 1rem;
  }
  .prose p:last-child {
    margin-bottom: 0;
  }
  .spotify-embed {
    margin-top: 0.5rem;
  }
  .spotify-placeholder {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    letter-spacing: 0.05em;
  }
  .spotify-placeholder span {
    font-size: 1.2rem;
  }
  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .image-placeholder {
    aspect-ratio: 4 / 3;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 4px;
  }
  .placeholder-note {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0;
  }
  .contact-block {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .contact-columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }
  .contact-label {
    margin: 0 0 0.75rem;
    font-size: 0.75rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.55);
  }
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }
  .contact-links a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 0.95rem;
  }
  .contact-links a:hover {
    color: rgba(255, 255, 255, 1);
  }
  .ig-embeds {
    display: flex;
  }
</style>
